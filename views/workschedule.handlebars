<link rel="stylesheet" href="stylesheets/presetschedule.css">
 <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

<div class="main">
    <div class="form-header">
        <h2 class="form-title" style="margin-bottom: 20px;">Enter Sleep &#38 Work Schedule</h2>
    </div>
    <div class="form-body" >
        <form action="" align="center">

            <div class="days" style="margin-left: 30px;">
                <div class="day">
                    <label class="day-label" for="sunday">Sunday
                        <input type="checkbox" class="checkbox" id="sunday" name="sunday">
                    </label>
                </div>
                <div class="day">
                    <label class="day-label" for="monday">Monday
                        <input type="checkbox" class="checkbox" id="monday" name="monday">
                    </label>
                </div>

                <div class="day">
                    <label class="day-label" for="tuesday">Tuesday
                        <input type="checkbox" class="checkbox" id="tuesday" name="tuesday">
                    </label>
                </div>

                <div class="day">
                    <label class="day-label" for="wednesday">Wednesday
                        <input type="checkbox" class="checkbox" id="wednesday" name="wednesday">
                    </label>
                </div>

                <div class="day">
                    <label class="day-label" for="thursday">Thursday
                        <input type="checkbox" class="checkbox" id="thursday" name="thursday">
                    </label>
                </div>

                <div class="day">
                    <label class="day-label" for="friday">Friday
                        <input type="checkbox" class="checkbox" id="friday" name="friday">
                    </label>
                </div>

                <div class="day">
                    <label class="day-label" for="saturday">Saturday
                        <input type="checkbox" class="checkbox" id="saturday" name="saturday">
                    </label>
                </div>
            </div>
            <div >
            {{> sleep }}
            <br/>
            {{> work }}
            </div>
            <br/>
            <div class='buttonDiv'>
                <!--after submitting form redirect to categories page-->
                <div class="btns">
                    <button type="submit" class="btn" id="save" href="/categories">Save Changes</button>
                    <a type="submit" class="btn" id="back" href="/dashboard">Go Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/javascript/presetschedule.js"></script>
 

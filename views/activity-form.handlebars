{{>activityformcss}}

<div class="main" style="height: 450px;" method="post" action="login">
    <p class="sign" style="margin-bottom: 40px;" align="center">Select Duration</p>
    <form class="column" style="column-gap: 40px;" action="">
        <div class="activityform">
            <span style="margin-left: 40%; font-size:large; color:#8C55AA; margin-top:60px;">Activity Duration</span>
            <select class="un" style="border-radius: 5px; max-width: 500px; margin-left:70px" aria-label=".form-select-lg" required>
                <option selected>Duration</option>
                <option value="0015">15 MIN</option>
                <option value="0030">30 MIN</option>
                <option value="0045">45 MIN</option>
                <option value="0100">1 HR</option>
                <option value="0115">1 HR 15 MIN</option>
                <option value="0130">1 HR 30 MIN</option>
                <option value="0145">1 HR 45 MIN</option>
                <option value="0200">2 HR</option>
            </select>
        </div>
        <div class="activityform">
            <span>
                <label for="activity-type" class="label" style="margin-left: 230px; font-size:large; color:#8C55AA;">
                    Enter activity type:
                </label>
                <input type="text" class="un" style="margin-left: 70px;" id="activity-type" name="activity-type" style="margin-bottom: 30px;" placeholder="ex: running" required>
            </span>
        </div>

        <button type="submit" class="btn" style="margin-left:100px;" href="/categories" value="submit">Save Activity</button>
        <button type="submit" class="btn" href="/schedule" value="submit">View Schedule</button>

    </form>
</div>
